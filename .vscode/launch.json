{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug C++ Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/main.exe",  // Adjust the path if needed
            "args": [],  // You can specify command line arguments here
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",  // Current working directory
            "environment": [],
            "externalConsole": false,  // Set to true to run in an external terminal
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file",  // Use your build task here
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe"  // Path to gdb
        }
    ]
}
